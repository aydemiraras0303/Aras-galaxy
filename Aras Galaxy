<script>
// Mini Oyun Merkezi
function startGame(gameName){
  const gameArea = document.getElementById('gameArea');
  gameArea.innerHTML = '';
  
  switch(gameName){
    case 'fishing':
      gameArea.innerHTML = `
        <h2>ğŸ£ BalÄ±k Tutma</h2>
        <button id="castBtn">OltayÄ± At</button>
        <p id="result"></p>
        <p>Toplam Para: <span id="money">0</span> ğŸ’°</p>
        <div id="pond" style="position:relative;width:100%;height:250px;background:#1b3b6f;overflow:hidden;border-radius:10px;"></div>
        <div id="collection"></div>`;
      initFishing();
      break;

    case 'mushroom':
      gameArea.innerHTML = `
        <h2>ğŸ„ Mantar Toplama</h2>
        <button id="spawnBtn">Mantar Ã‡Ä±kart</button>
        <p id="result"></p>
        <p>Toplam Para: <span id="money">0</span> ğŸ’°</p>
        <div id="field" style="position:relative;width:100%;height:250px;background:#4b7b2f;overflow:hidden;border-radius:10px;"></div>
        <div id="collection"></div>`;
      initMushroom();
      break;

    case 'balloon':
      gameArea.innerHTML = `
        <h2>ğŸˆ Balon Patlatma</h2>
        <p>Balonlara tÄ±kla, puan kazan!</p>
        <p>Puan: <span id="score">0</span></p>
        <div id="balloonField" style="position:relative;width:100%;height:250px;background:#113344;overflow:hidden;border-radius:10px;"></div>
        <button id="spawnBalloonBtn">Balon Ã‡Ä±kart</button>`;
      initBalloon();
      break;

    default:
      gameArea.innerHTML = `<p>Oyun bulunamadÄ±!</p>`;
  }
}

// ğŸ£ BalÄ±k Tutma
function initFishing(){
  let money=0; let collection={};
  const fishTypes = [
    {name:'KÃ¼Ã§Ã¼k BalÄ±k', value:5, color:'orange', size:30, speed:5, rarity:'normal'},
    {name:'Orta BalÄ±k', value:15, color:'yellow', size:40, speed:7, rarity:'normal'},
    {name:'BÃ¼yÃ¼k BalÄ±k', value:30, color:'red', size:50, speed:9, rarity:'normal'},
    {name:'Efsane BalÄ±k', value:100, color:'gold', size:60, speed:12, rarity:'rare'},
    {name:'Unicorn BalÄ±k', value:500, color:'violet', size:70, speed:15, rarity:'event'}
  ];

  function catchFish(fish){
    money += fish.value;
    document.getElementById('money').innerText = money;
    document.getElementById('result').innerText = `ğŸ‰ ${fish.name} tuttun ve ${fish.value} ğŸ’° kazandÄ±n!`;
    collection[fish.name] = collection[fish.name] ? collection[fish.name]+1 : 1;
    updateCollection();
  }
  function updateCollection(){
    let html = "<h3>ğŸŸ BalÄ±k Koleksiyonu</h3><ul>";
    for(const name in collection) html+=`<li>${name}: ${collection[name]}</li>`;
    html+="</ul>";
    document.getElementById('collection').innerHTML=html;
  }

  document.getElementById('castBtn').addEventListener('click', ()=>{
    const rand = Math.random();
    let fish;
    if(rand<0.05) fish=fishTypes.find(f=>f.rarity==='event');
    else if(rand<0.15) fish=fishTypes.find(f=>f.rarity==='rare');
    else fish=fishTypes.filter(f=>f.rarity==='normal')[Math.floor(Math.random()*3)];

    const pond = document.getElementById('pond');
    const fishEl=document.createElement('div');
    fishEl.classList.add('fish');
    fishEl.style.background=fish.color;
    fishEl.style.width=fish.size+'px';
    fishEl.style.height=fish.size/2+'px';
    fishEl.style.top=Math.random()*(pond.offsetHeight-50)+'px';
    fishEl.style.left='-60px';
    fishEl.style.animation=`swim ${fish.speed}s linear infinite`;
    pond.appendChild(fishEl);

    fishEl.addEventListener('click', ()=>{
      catchFish(fish);
      pond.removeChild(fishEl);
    });
    setTimeout(()=>{if(pond.contains(fishEl)) pond.removeChild(fishEl)},10000);
  });
}

// ğŸ„ Mantar Toplama
function initMushroom(){
  let money=0; let collection={};
  const mushrooms=[
    {name:'KÃ¼Ã§Ã¼k Mantar', value:5, color:'red', size:30, rarity:'normal'},
    {name:'Orta Mantar', value:15, color:'brown', size:40, rarity:'normal'},
    {name:'BÃ¼yÃ¼k Mantar', value:30, color:'yellow', size:50, rarity:'rare'},
    {name:'AltÄ±n Mantar', value:100, color:'gold', size:60, rarity:'event'}
  ];
  function catchMushroom(m){
    money+=m.value;
    document.getElementById('money').innerText=money;
    document.getElementById('result').innerText=`ğŸ„ ${m.name} topladÄ±n ve ${m.value} ğŸ’° kazandÄ±n!`;
    collection[m.name]=collection[m.name]?collection[m.name]+1:1;
    updateCollection();
  }
  function updateCollection(){
    let html="<h3>ğŸ„ Mantar Koleksiyonu</h3><ul>";
    for(const name in collection) html+=`<li>${name}: ${collection[name]}</li>`;
    html+="</ul>";
    document.getElementById('collection').innerHTML=html;
  }
  document.getElementById('spawnBtn').addEventListener('click', ()=>{
    const rand=Math.random();
    let m;
    if(rand<0.05) m=mushrooms.find(x=>x.rarity==='event');
    else if(rand<0.15) m=mushrooms.find(x=>x.rarity==='rare');
    else m=mushrooms.find(x=>x.rarity==='normal');
    const field=document.getElementById('field');
    const el=document.createElement('div');
    el.classList.add('mushroom');
    el.style.background=m.color;
    el.style.width=m.size+'px';
    el.style.height=m.size+'px';
    el.style.top=Math.random()*(field.offsetHeight-50)+'px';
    el.style.left=Math.random()*(field.offsetWidth-50)+'px';
    el.addEventListener('click',()=>{catchMushroom(m);field.removeChild(el);});
    field.appendChild(el);
    setTimeout(()=>{if(field.contains(el)) field.removeChild(el)},10000);
  });
}

// ğŸˆ Balon Patlatma
function initBalloon(){
  let score=0;
  document.getElementById('score').innerText=score;
  document.getElementById('spawnBalloonBtn').addEventListener('click',()=>{
    const field=document.getElementById('balloonField');
    const b=document.createElement('div');
    b.classList.add('balloon');
    const size=30+Math.random()*20;
    b.style.width=size+'px';
    b.style.height=size+'px';
    b.style.background=['red','yellow','blue','pink'][Math.floor(Math.random()*4)];
    b.style.bottom='-50px';
    b.style.left=Math.random()*(field.offsetWidth-50)+'px';
    b.style.animation=`floatBalloon ${3+Math.random()*3}s linear forwards`;
    b.addEventListener('click',()=>{
      score+=10;
      document.getElementById('score').innerText=score;
      field.removeChild(b);
    });
    field.appendChild(b);
    setTimeout(()=>{if(field.contains(b)) field.removeChild(b)},7000);
  });
}
</script>

